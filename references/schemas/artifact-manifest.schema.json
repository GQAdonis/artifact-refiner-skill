{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["artifact_type", "variants", "generated_at"],
  "properties": {
    "artifact_type": { "type": "string" },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "sizes": {
      "type": "array",
      "items": { "type": "number" }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}